<Window x:Class="Example01.Wpf.DBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example01.Wpf.DBase"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <GroupBox Header="Person">
            <DockPanel>
                <StackPanel DockPanel.Dock="Bottom">
                    <Button Margin="10"  Content="Wyświetl" ></Button>
                </StackPanel>
                <StackPanel DockPanel.Dock="Top">
                    <DataGrid Height="230" SelectionChanged="DataGrid_SelectionChanged"/>

                </StackPanel>
            </DockPanel>
        </GroupBox>
    </Grid>
</Window>
