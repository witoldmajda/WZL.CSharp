<Application x:Class="WZL.PowerUnit.WpfClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WZL.PowerUnit.WpfClient"
             StartupUri="Views/PowerSupplierView.xaml"> <!--Ścieżka do wyświetlania pierwszego okna w aplikacji-->
    <Application.Resources>

        <Style TargetType="ToggleButton">
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Width" Value="150" />

            
            <!--warunek właściwości wyglądu-->
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="Green" />
                </Trigger>
            </Style.Triggers>
        </Style>
         
    </Application.Resources>
</Application>
